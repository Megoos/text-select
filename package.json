{
	"name": "text-select",
	"version": "1.0.0",
	"description": "A library to select any text on a web page without dependencies",
	"main": "dist/index.js",
	"module": "dist/index.es.js",
	"browser": "dist/index.bundle.js",
	"files": [
		"dist"
	],
	"types": "dist/index.d.ts",
	"scripts": {
		"build": "rollup -c",
		"build:watch": "rollup -cw",
		"test": "testcafe chrome tests/*test*",
		"test:ci": "testcafe chrome:headless tests/*test*",
		"verify": "npm run build && npm run test:ci"
	},
	"devDependencies": {
		"rollup": "^1.6.0",
		"rollup-plugin-terser": "^4.0.4",
		"rollup-plugin-typescript2": "^0.19.3",
		"testcafe": "^1.1.0",
		"typescript": "^3.3.3333"
	},
	"dependencies": {},
	"keywords": [
		"NPM",
		"select",
		"text",
		"TypeScript",
		"JavaScript",
		"E2E"
	],
	"author": "Ali Kamalizade",
	"license": "MIT"
}
